@tailwind preflight;
@tailwind components;
@tailwind utilities;

$accentColor = #5b3cc4
$textColor = #5b5777
$borderColor = #eaecef
$codeBgColor = #364b75
$navbarHeight = 3.5rem
$arrowBgColor = #ddd
$nprogressColor = #5b3cc4

@font-face
  font-family 'Font Awesome 5 Brands'
  font-style normal
  font-weight 400
  src url("/fontawesome/webfonts/fa-brands-400.woff2") format("woff2")
  font-display swap

.fab
  font-family 'Font Awesome 5 Brands'
  font-weight 400

@font-face
  font-family 'Font Awesome 5 Regular'
  font-style normal
  font-weight 400
  src url("/fontawesome/webfonts/fa-regular-400.woff2") format("woff2")
  font-display swap

@font-face
  font-family 'Font Awesome 5 Solid'
  font-style normal
  font-weight 900
  src url("/fontawesome/webfonts/fa-regular-400.woff2") format("woff2"),url("/fontawesome/webfonts/fa-solid-900.woff2") format("woff2")
  font-display swap

.far, .fas
  font-family 'Font Awesome 5 Free'
  font-weight 900

header-color = #5b5777
header-bgcolor = rgba(255,255,255,0.6) 

@font-face
  font-family "Yu Gothic"
  src local("Yu Gothic Medium")
  font-weight 100

@font-face
  font-family "Yu Gothic"
