$accentColor = #5b3cc4
$textColor = #5b5777
$borderColor = #eaecef
$codeBgColor = #364b75
$navbarHeight = 3.5rem
$arrowBgColor = #ddd
$nprogressColor = #5b3cc4

@font-face
  font-family 'Noto Sans CJK JP Subset'
  font-style normal
  font-weight 300
  src: local('Noto Sans CJK JP'),
       local('NotoSansCJKjp-Light'),
       local('NotoSansJP-Light'),
       url('/notosans/NotoSansCJKjp-Light.woff2') format('woff2'),
       url('/notosans/NotoSansCJKjp-Light.woff') format('woff'),
       url('/notosans/NotoSansCJKjp-Light.ttf') format('truetype')

@font-face
  font-family 'Noto Sans CJK JP Subset'
  font-style normal
  font-weight 400
  src: local('Noto Sans CJK JP'),
       local('NotoSansCJKjp-Regular'),
       local('NotoSansJP-Regular'),
       url('/notosans/NotoSansCJKjp-Regular.woff2') format('woff2'),
       url('/notosans/NotoSansCJKjp-Regular.woff') format('woff'),
       url('/notosans/NotoSansCJKjp-Regular.ttf') format('truetype')

@font-face
  font-family 'Noto Sans CJK JP Subset'
  font-style normal
  font-weight 700
  src local('NotoSansCJKjp-Bold'),
       local('NotoSansJP-Bold'),
       url('/notosans/NotoSansCJKjp-Bold.woff2') format('woff2'),
       url('/notosans/NotoSansCJKjp-Bold.woff') format('woff'),
       url('/notosans/NotoSansCJKjp-Bold.ttf') format('truetype')

header-color = #5b5777
header-bgcolor = rgba(255,255,255,0.7) 

html
  overflow-y scroll
  font-size 16px!important

body
  font-size 1rem!important
  font-family 'Noto Sans', 'Noto Sans CJK JP', 'Noto Sans CJK JP Subset', sans-serif!important
  font-feature-settings "pkna" 1!important
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  line-height 1rem!important

.navbar
  background-color header-bgcolor!important
  color header-color
  box-shadow 0 0 10px 0 rgba(0,0,0,0.1)!important
  backdrop-filter blur(2px) !important

.navbar .site-name
  color header-color

span.site-name.can-hide
  display: none!important

.nav-links a.router-link-active
  color #5b3cc4

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active

.navbar .links
  background-color initial

.dropdown-wrapper .nav-dropdown .dropdown-item
  color black 

.sidebar
  background-color #f5f7fb!important

.page
  background-color #fdfdfd!important
  margin-bottom 3rem!important

h1
  padding 15px
  padding-left 0
  color #5b3cc4

h2
  font-size 1.7rem

h3
  font-size 1.4rem
  color #5b3cc4


div[class*="language-"]
  background-color #22355d

:not(pre) > code
  margin 0 0.3rem!important

.sidebar-group-items > li
  padding-top .5rem!important
  border-top #e2e7f1 1px solid

.custom-block.warning
  background-color rgba(255, 136, 136, 0.3)
  color #5b5777

.custom-block.tip, .custom-block.warning, .custom-block.danger
  border-left-width initial
  border-left-style initial
  margin 1.5rem

.custom-block.tip, .custom-block.warning, .custom-block.danger
  .custom-block-title
    color #21355d

.sidebar-sub-headers
  padding-bottom .5rem!important

.home .hero h1
  margin-bottom -1.5rem!important

p.action
  margin 3rem!important

.home
  .feature p, .hero .description
    color #686489!important

@font-face
  font-display swap

.go-to-top[data-v-67a9666a]
  bottom 3rem

@media (max-width: 959px)
  .go-to-top[data-v-67a9666a]
    display initial

.content img
  transition all .3s ease-out
  transform translateY(-5px)

th
  background-color #abaabb
  color #fff

table
  border-radius .3rem
  display table!important
  table-layout fixed
  width 95%
