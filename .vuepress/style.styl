header-color = #5b5777
header-bgcolor = rgba(255,255,255,0.7) 

html
  overflow-y scroll

body
  font-size 1.2rem
  font-family "YakuHanRP", "Mplus 1p", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

.navbar
  background-color header-bgcolor
  color header-color
  box-shadow 0 0 15px 0 rgba(0,0,0,.04)
  backdrop-filter blur(2px) 

.navbar .site-name
  color header-color

.nav-links 
  display: inline-block
  margin-right: 2rem

.can-hide
  display: none

.nav-links a.router-link-active
  color #5b3cc4

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active

.navbar .links
  background-color initial

.dropdown-wrapper .nav-dropdown .dropdown-item
  color black 

.sidebar
  background-color #f5f7fb

.page
  background-color #fdfdfd

h1
  padding 15px
  padding-left 0
  color #5b3cc4

h2
  font-size 1.7rem

h3
  font-size 1.4rem
  color #5b3cc4


div[class*="language-"]
  background-color #22355d

.content code
  background-color #76889a
  color white
  font-size 1rem
